extends layout

block content
  div(class="jumbotron")
    h1= title
    p Welcome to #{title}
    h2 List of Users
  div(ng-app='impLCsApp' ng-controller='impLCsCtrl')
    div(class="table-responsive") 
      table(class="table table-condensed table-hover table-striped")
        thead
          th LC Number
          th Customer
          th Beneficiary Bank
          th AMount
        tbody
            tr(ng-repeat='x in impLCarr')
              td(ng-bind='x.lcNum')
              td(ng-bind='x.customer')
              td(ng-bind="x.benefBank")
              td(ng-bind="x.amount")
              td
                div(class="form-group")
                  div(class="btn-group")
                    button(ng-click="modRow($index)" class="btn btn-info btn-sm") Edit 
                    button(ng-click="removeRow($index, x._id)" class="btn btn-warning btn-sm") Delete 
            tr
              div(class="form-group")
                td
                  input(type="text" class="form-control" placeholder="LC Number" ng-model="impLC.lcNum")
                td
                  input(type="text" class="form-control" placeholder="Customer" ng-model="impLC.customer")
                td
                  input(type="text" class="form-control" placeholder="Beneficiary Bank" ng-model="impLC.benefBank")
                td
                  input(type="text" class="form-control" placeholder="Amount" ng-model="impLC.amount")
                td
                  button(ng-click="addRow()" ng-bind='btnLbl' class="btn btn-primary")

